<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Connect_Market">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_weight="1"
        android:text="Market"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Interpark_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/interparkicon" />

        <Button
            android:id="@+id/Auction_Btn"
            android:layout_width="130dp"
            android:layout_height="109dp"
            android:layout_weight="1"
            android:background="@drawable/auctionicon" />

        <Button
            android:id="@+id/Wemakeprice_Btn"
            android:layout_width="102dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:background="@drawable/wemapicon" />
    </LinearLayout>


</LinearLayout>